<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        xmlns:android="http://schemas.android.com/apk/res/android">
    
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent"
        tools:context=".AddProfile">
    
    <TextView
            android:textSize="35sp"
            android:gravity="center"
            android:textColor="#F36969"
            android:background="#1a1a1a"
            android:padding="20dp"
            android:text="Add Profile to your list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    <EditText
            android:hint="First Name"
            android:textColor="#111111"
            android:id="@+id/etfirstname"
            android:textSize="25sp"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:textColorHint="#ACACAC"
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    <EditText
            android:hint="Surname"
            android:textColorHint="#ACACAC"
            android:textSize="25sp"
            android:id="@+id/etsamename"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:textColor="#111111"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    <TextView
            android:textSize="15dp"
            android:text="Professional Info :-"
            android:textColor="#F36969"
            android:layout_marginTop="20dp"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    
    <EditText
            android:hint="Profession"
            android:textColorHint="#ACACAC"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:textSize="25sp"
            android:textColor="#111111"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    <EditText
            android:hint="Expertise in"
            android:textSize="25sp"
            android:textColor="#111111"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:textColorHint="#ACACAC"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    
    <TextView 
            android:textSize="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:text="Contact Info :- "
            android:textColor="#F36969"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent" 
            android:layout_height="wrap_content"/>

    <EditText
            android:hint="Phone Number"
            android:textColorHint="#ACACAC"
            android:textSize="25sp"
            android:id="@+id/etphoneno"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:textColor="#111111"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    <EditText
            android:hint="E-Mail ID"
            android:textSize="25sp"
            android:textColorHint="#ACACAC"
            android:textColor="#111111"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    
    <Button 
            android:id="@+id/addProfileBtn"
            android:text="Save"
            android:background="#1a1a1a"
            android:layout_marginTop="50dp"
            android:layout_gravity="center"
            android:textColor="#E4C3C3"
            android:textSize="25sp"
            android:layout_width="wrap_content" 
            android:layout_height="wrap_content"/>

</LinearLayout>
</ScrollView>